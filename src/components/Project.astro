---
import type { Project } from "../lib/projects";
import { Link } from "./Link";

type Props = {
  project: Project;
};

const {
  project: { name, description, repoURL },
} = Astro.props;
---

<div
  class="w-20.6666666666666666666666666666666666666666666666667ch flex flex-col"
>
  <Link target="_blank" href={repoURL}>
    <span class="font-medium">{name}</span>
  </Link>

  <span class="pt-3">{description}</span>
</div>
